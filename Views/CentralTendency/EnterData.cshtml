@model int
@{
    ViewData["Title"] = "Ingresar Datos";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <form asp-action="SubmitData" method="post">
        <div class="row">
            @for (int i = 0; i < Model; i++)
            {
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label for="data_@i">Dato @(i + 1):</label>
                        <input type="number" name="data" id="data_@i" class="form-control" placeholder="Ingresa un valor" required />
                    </div>
                </div>
            }
        </div>

        <!-- Sección de selección de distribución -->
        <div class="form-group mt-4">
            <label for="distributionType">Seleccionar Tipo de Distribución:</label>
            <select name="distributionType" id="distributionType" class="form-control" required>
                <option value="" disabled selected>Seleccione una distribución</option>
                <option value="Normal">Distribución Normal</option>
                <option value="Binomial">Distribución Binomial</option>
                <option value="Poisson">Distribución Poisson</option>
                <!-- Agrega más opciones según sea necesario -->
            </select>
        </div>

        <!-- Botón de envío -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Calcular Medidas de Tendencia Central</button>
        </div>
    </form>
</div>

<!-- Mensajes de error -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}



