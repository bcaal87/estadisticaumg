@model StatisticalCalculator.Models.RegressionModel
@{
    ViewData["Title"] = "Input Regression";
}

<h2 class="text-center mb-4">Regresión Lineal</h2>

<div class="container">
    <div class="card">
        <div class="card-header text-center">
            <h3>Introduzca sus Datos</h3>
        </div>
        <div class="card-body">
            <form asp-action="ProcessRegressionData" method="post">
                <div class="form-group">
                    <label for="xValues">Valores de X (separados por comas):</label>
                    <input type="text" id="xValues" name="xValues" class="form-control" placeholder="Ej: 1, 2, 3, 4" required />
                </div>
                <div class="form-group">
                    <label for="yValues">Valores de Y (separados por comas):</label>
                    <input type="text" id="yValues" name="yValues" class="form-control" placeholder="Ej: 2, 4, 6, 8" required />
                </div>
                <div class="form-group">
                    <label for="method">Método:</label>
                    <select id="method" name="method" class="form-control">
                        <option value="LeastSquares">Mínimos Cuadrados</option>
                        <option value="Covariance">Covarianza</option>
                    </select>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Calcular</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 20px;
        max-width: 600px; /* Ajusta el ancho máximo del contenedor */
    }

    h2 {
        color: #333; /* Color del título */
    }

    .card {
        border: 1px solid #ddd; /* Añade un borde sutil a la tarjeta */
        border-radius: 8px; /* Bordes redondeados */
    }

    .card-header {
        background-color: #f8f9fa; /* Color de fondo claro para la cabecera */
        color: #333; /* Color del texto */
        font-weight: bold; /* Texto en negrita */
    }

    .btn-primary {
        background-color: #007bff; /* Color de fondo del botón */
        border: none; /* Sin borde */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Color de fondo al pasar el mouse */
        }
</style>


